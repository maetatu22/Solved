<header class="sessions-header">
<h1>Solved</h1>
</header>
<div class="details">
  <div class="detail-title">
    <h2><%= @problem.title %></h2>
    <span clsss="user-name-show"><%= @problem.user.name %>さん</span>
    <p class="created-at"><%= @problem.created_at.strftime('%Y/%m/%d') %></p>
  </div>
  <div class="detail-text">
    <p><%= @problem.text %></p>
  </div>
    <div class="show-config">
    <% if user_signed_in? && current_user.id == @problem.user_id%>
      <div class="edit-problem">
      <%= link_to "投稿を編集する" ,edit_problem_path(@problem.id) ,class:"edit"%>
      </div>
      <div class="destroy-problem">
      <%= link_to "投稿を削除する" ,"#" ,class:"destroy", method: :delete%>
      </div>
      <%end%>
    </div>
</div>